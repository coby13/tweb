<div class="span3">
<h2>Είσοδος</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :Κωδικός %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :Να_με_θυμάσαι %></div>
  <% end -%>
</br>
</br>
  <div><%= f.submit "Είσοδος", :class=> 'btn-large btn-success' %></div>
<% end %>

<%= render "links" %>
</div>

